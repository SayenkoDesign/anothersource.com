<section class="testimonials-slider">
    <div class="row">
        <div class="column">
            <h2>References</h2>
        </div>
    </div>

    <div class="row columns">
        <div class="slide-wrapper">
            <div class="slick">
                {% for testimony in panel.testimonials %}
                    <div class="testimony align-center">
                        <div class="row align-center">
                            <div class="small-12 medium-8 large-6">
                                <img src="{{ TimberImage(testimony.testimony.testimonial_headshot).src|resize(128,128,true) }}" class="logo"/>
                                <div class="quote">
                                    <blockquote>
                                        {{ testimony.testimony.testimonial_content }}
                                    </blockquote>
                                    <cite>
                                        {{ testimony.testimony.testimonial_author }}
                                    </cite>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>