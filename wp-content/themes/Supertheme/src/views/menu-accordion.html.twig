{% if menu %}
    <ul class="vertical menu" data-accordion-menu>
        {% for item in menu.get_items %}
            <li class="{{item.classes | join(' ')}}">
                {% if "lets-talk" in item.classes %}
                    <a href="{{item.get_link}}" class="button" data-fancybox data-src="#lets-talk" href="javascript:;">{{item.title}}</a>
                {% else %}
                    <a href="{{item.get_link}}">{{item.title}}</a>
                {% endif %}
                {% if item.get_children %}
                    <ul class="menu vertical nested">
                        {% for child in item.get_children %}
                            <li class="{{child.classes | join(' ')}}"><a href="{{child.get_link}}">{{child.title}}</a></li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endif %}
