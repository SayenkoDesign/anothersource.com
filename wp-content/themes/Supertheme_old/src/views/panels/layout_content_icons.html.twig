<section class="content-columns">
    <div class="introduction">
        <div class="row align-center">
            <div class="small-12 medium-8 large-7 columns">
                <h2>{{ panel.content_icon_title }}</h2>
                {{ panel.content_icon_content }}
            </div>
        </div>
    </div>
    <div class="icons">
        <div class="row align-center small-up-1 medium-up-2 large-up-3">
            {% for column in panel.nav_content_columns %}
                <div class="column">
                    <div class="panel">
                        <a href="" class="overview">
                            <img src="{{ column.content_icon_column_icon.url }}" alt="{{ column.content_icon_column_icon.title }}">
                            <h4>{{ column.content_icon_column_title }}</h4>
                        </a>
                        <div class="details">
                            <div class="row align-center align-middle">
                                <div class="small-12 medium-6 columns"><h4>{{ column.content_icon_column_hover_title }}</h4></div>
                                <div class="small-12 medium-6 border columns">
                                    <ul class="no-bullet">
                                        {% for link in column.nav_content_columns_navigation %}
                                            <li>{{ link.nav_content_columns_navigation_text }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>